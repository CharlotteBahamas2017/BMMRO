{
  "hosting": {
    "site": "bmmro-data-export",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore/firestore.rules"
  },
  "emulators": {
    "firestore": {
      "port": 8080
    }
  }
}
